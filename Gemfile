source 'https://rubygems.org'

gem 'rails', '3.2.9'
gem 'jquery-rails'

group :development, :test do
  gem 'sqlite3'
  gem 'rspec-rails'
  gem 'guard-rspec'
  gem 'terminal-notifier-guard'
  gem 'guard-spork'
  gem 'spork'
end

group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

group :test do
  gem 'capybara'
  gem 'rb-fsevent', require: false
end

group :production do
  gem 'pg'
end
