<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_tag sessions_path do |f| %>

      <%= label_tag :password %>
      <%= password_field_tag :password %>

      <%= label_tag :remember_me, check_box_tag(:remember_me, 1, params[:remember_me]) + "Remember me", class: "checkbox" %>

      <%= submit_tag "Sign in", class: "btn" %>

      <p><%= link_to "forgotten or want to change password?", new_password_reset_path %></p>

    <% end %>
  </div>
</div>


