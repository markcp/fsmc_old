<% provide(:title, "Reset password") %>
<h1>Reset/change password</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_tag password_resets_path, :method => :post do %>

      <%= label_tag :email %>
      <%= text_field_tag :email, params[:email], class: "input-large" %>

      <%= submit_tag "Reset/change password", class: "btn" %>
    <% end %>
  </div>
</div>
